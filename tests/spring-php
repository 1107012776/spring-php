<?php
//php composer.phar dump-autoload -o
ini_set ( "display_errors" , "On" );
error_reporting (E_ALL);
ini_set('date.timezone','Asia/Shanghai');
defined('SPRINGPHP_ROOT') or define('SPRINGPHP_ROOT',realpath( './'));

$file = null;
foreach ([SPRINGPHP_ROOT . '/../vendor/autoload.php',SPRINGPHP_ROOT . '/../../vendor/autoload.php', SPRINGPHP_ROOT . '/../../../autoload.php',  ] as $file) {
    if (file_exists($file)) {
        require $file;
        break;
    }
}
\SpringPHP\Core\SimpleAutoload::init();
\SpringPHP\Core\SimpleAutoload::add([
    'App' => SPRINGPHP_ROOT.'/App'
]);
var_dump(SPRINGPHP_ROOT.'/App');
if(!file_exists($file)){
    die("include composer autoload.php fail\n");
}
if(file_exists(SPRINGPHP_ROOT.'/bootstrap.php')){
    require_once SPRINGPHP_ROOT.'/bootstrap.php';
}
\SpringPHP\Boot::init();
